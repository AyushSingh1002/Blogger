<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Navigation Bar</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap">
  <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
  <style>
    :root {
      --bg-nav: #0a0f1a;
      --bg-mobile: #1e1e1e;
      --bg-translucent: rgba(10, 15, 26, 0.8);
      --text-white: #fff;
      --text-label: #bbbbbb;
      --accent: #5a55ca;
      --accent-hover: #4842b6;
      --search-bg: #2c2c2c;
      --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.3);
      --shadow-md: 0 6px 20px rgba(0, 0, 0, 0.4);
      --accent-glow: rgba(90, 85, 202, 0.3);
      --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
      scroll-behavior: smooth;
    }

    body {
      background: var(--bg-nav);
      min-height: 100vh;
      overflow-x: hidden;
    }

    .nav {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      padding: 15px 100px;
      background: var(--bg-nav);
      backdrop-filter: blur(90px);
      box-shadow: var(--shadow-sm);
      display: flex;
      align-items: center;
      justify-content: space-between;
      z-index: 1000;
      transition: var(--transition);
    }

    .nav.scrolled {
      background: rgba(10, 15, 26, 0.9);
      box-shadow: 0 4px 12px var(--shadow-md);
    }

    .nav .logo {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--text-white);
      text-decoration: none;
      background: linear-gradient(90deg, var(--text-white), var(--accent));
      -webkit-text-fill-color: transparent;
      transition: var(--transition);
    }

    .nav .logo:hover {
      transform: scale(1.05);
    }

    .nav-links {
      display: flex;
      align-items: center;
      list-style: none;
      gap: 30px;
    }

    .nav-links li a {
      color: var(--text-white);
      text-decoration: none;
      font-size: 0.95rem;
      font-weight: 400;
      position: relative;
      transition: var(--transition);
    }

    .nav-links li a:hover {
      color: var(--accent);
    }

    .nav-links li a::after {
      content: '';
      position: absolute;
      bottom: -4px;
      left: 0;
      width: 0;
      height: 2px;
      background: var(--accent);
      transition: var(--transition);
    }

    .nav-links li a:hover::after {
      width: 100%;
    }

    .search-box {
      position: relative;
      height: 40px;
      max-width: 400px;
      width: 100%;
      opacity: 0;
      pointer-events: none;
      transition: var(--transition);
      margin-left: 20px;
    }

    .nav.openSearch .search-box {
      opacity: 1;
      pointer-events: auto;
    }

    .search-box input {
      height: 100%;
      width: 100%;
      border: none;
      outline: none;
      border-radius: 8px;
      background: var(--search-bg);
      color: var(--text-white);
      padding: 0 15px 0 45px;
      font-size: 0.9rem;
      transition: var(--transition);
    }

    .search-box input:focus {
      box-shadow: 0 0 6px var(--accent-glow);
    }

    .search-box .search-icon {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: var(--accent);
      font-size: 1.2rem;
      cursor: pointer;
      transition: var(--transition);
    }

    .search-suggestions {
      position: absolute;
      top: 100%;
      left: 0;
      width: 100%;
      background: var(--bg-mobile);
      border-radius: 8px;
      margin-top: 5px;
      max-height: 200px;
      overflow-y: auto;
      display: none;
      box-shadow: var(--shadow-sm);
      z-index: 10;
    }

    .search-suggestions.active {
      display: block;
    }

    .search-suggestions li {
      padding: 10px 15px;
      color: var(--text-white);
      font-size: 0.9rem;
      cursor: pointer;
      transition: var(--transition);
    }

    .search-suggestions li:hover {
      background: var(--accent);
      color: var(--text-white);
    }

    .nav-open-btn,
    .nav-close-btn {
      display: none;
      color: var(--text-white);
      font-size: 1.5rem;
      cursor: pointer;
      transition: var(--transition);
    }

    .nav-open-btn:hover,
    .nav-close-btn:hover {
      color: var(--accent);
    }

    .profile {
      position: relative;
      display: flex;
      align-items: center;
    }

    .avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      border: 2px solid var(--text-white);
      box-shadow: 0 0 5px var(--shadow-sm);
      object-fit: cover;
      transition: var(--transition);
      cursor: pointer;
    }

    .avatar:hover {
      transform: scale(1.1);
      border-color: var(--accent);
    }

    .dropdown {
      position: absolute;
      top: 100%;
      right: 0;
      background: var(--bg-mobile);
      border-radius: 8px;
      box-shadow: var(--shadow-sm);
      min-width: 180px;
      margin-top: 10px;
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
      transition: var(--transition);
      z-index: 10;
    }

    .dropdown.active {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }

    .dropdown ul {
      list-style: none;
      padding: 10px 0;
    }

    .dropdown li a {
      display: block;
      padding: 10px 20px;
      color: var(--text-white);
      text-decoration: none;
      font-size: 0.9rem;
      transition: var(--transition);
    }

    .dropdown li a:hover {
      background: var(--accent);
      color: var(--text-white);
    }

    .notification-badge {
      position: absolute;
      top: -5px;
      right: -5px;
      background: var(--alert-color, #e57373);
      color: var(--text-white);
      font-size: 0.7rem;
      width: 18px;
      height: 18px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 500;
    }

    .theme-toggle {
      color: var(--text-white);
      font-size: 1.2rem;
      cursor: pointer;
      margin-left: 20px;
      transition: var(--transition);
    }

    .theme-toggle:hover {
      color: var(--accent);
    }

    /* Responsive */
    @media screen and (max-width: 1160px) {
      .nav {
        padding: 15px 60px;
      }
      .search-box {
        max-width: 350px;
      }
    }

    @media screen and (max-width: 950px) {
      .nav {
        padding: 15px 40px;
      }
      .search-box {
        max-width: 300px;
      }
    }

    @media screen and (max-width: 768px) {
      .nav-open-btn,
      .nav-close-btn {
        display: block;
      }

      .nav {
        padding: 15px 20px;
      }

      .nav-links {
        position: fixed;
        top: 0;
        left: -100%;
        height: 100%;
        width: 280px;
        padding-top: 80px;
        flex-direction: column;
        background: transparent;
        box-shadow: var(--shadow-md);
        transition: left 0.4s ease;
        z-index: 100;
      }

      .nav.openNav .nav-links {
        left: 0;
      }

      .nav-links li {
        width: 100%;
        background: rgba(0, 0, 0, 0.); /* darker + 80% opacity */
  backdrop-filter: blur(20px); /* nice blur effect */
  -webkit-backdrop-filter: blur(20px); /* Safari support */

        padding: 10px 20px;
      }

      .nav-links li a {
        font-size: 1rem;
      }

      .nav-close-btn {
        position: absolute;
        top: 20px;
        right: 20px;
      }

      .search-box {
        position: absolute;
        top: calc(100% + 10px);
        left: 50%;
        transform: translateX(-50%);
        max-width: calc(100% - 40px);
        margin-left: 0;
        box-shadow: var(--shadow-sm);
      }

      .dropdown {
        width: 100%;
        right: 20px;
      }

      .theme-toggle {
        margin-left: 10px;
      }
    }

    @media screen and (max-width: 480px) {
      .nav {
        padding: 10px 15px;
      }

      .nav .logo {
        font-size: 1.25rem;
      }

      .avatar {
        width: 35px;
        height: 35px;
      }

      .search-box {
        max-width: calc(100% - 30px);
      }

      .nav-links {
        width: 250px;
      }
    }
  </style>
</head>
<body>
  <nav class="nav">
    <i class="uil uil-bars nav-open-btn" aria-label="Open Navigation Menu"></i>
    <a href="/" class="logo">ThoughtTrail</a>
    <ul class="nav-links">
      <i class="uil uil-times nav-close-btn" aria-label="Close Navigation Menu"></i>
      <li><a href="/">Home</a></li>
      <% if (!locals.user) { %>
        <li><a href="/login">Login</a></li>
        <li><a href="/signup">Sign Up</a></li>
      <% } else { %>
        <li><a href="/profile/<%= user._id %>">Profile</a></li>
        <li><a href="/blog">Create Blogs</a></li>
        <li><a href="/logout">Log Out</a></li>
      <% } %>
    </ul>
    <div class="search-box">
      <i class="uil uil-search search-icon" aria-label="Search Blogs"></i>
      <input type="text" placeholder="Search Blogs..." aria-label="Search Blogs">
      <ul class="search-suggestions">
        <!-- Suggestions populated dynamically -->
      </ul>
    </div>
    <% if (locals.user) { %>
      <div class="profile">
        <img class="avatar" src="<%= user.ProfilePic %>" alt="User Avatar" loading="lazy">
        <div class="notification-badge">1</div>
        <div class="dropdown">
          <ul>
            <li><a href="/profile/<%= user._id %>">View Profile</a></li>
            <li><a href="/blog">Create Blog</a></li>
            <li><a href="/settings">Settings</a></li>
            <li><a href="/logout">Log Out</a></li>
          </ul>
        </div>
      </div>
    <% } %>
    <i class="uil uil-moon theme-toggle" aria-label="Toggle Dark/Light Theme"></i>
  </nav>
  <script>
    const nav = document.querySelector('.nav');
    const searchIcon = document.querySelector('.search-icon');
    const searchInput = document.querySelector('.search-box input');
    const searchSuggestions = document.querySelector('.search-suggestions');
    const navOpenBtn = document.querySelector('.nav-open-btn');
    const navCloseBtn = document.querySelector('.nav-close-btn');
    const avatar = document.querySelector('.avatar');
    const dropdown = document.querySelector('.dropdown');
    const themeToggle = document.querySelector('.theme-toggle');

    // Search Toggle
    searchIcon.addEventListener('click', () => {
      nav.classList.toggle('openSearch');
      nav.classList.remove('openNav');
      if (nav.classList.contains('openSearch')) {
        searchIcon.classList.replace('uil-search', 'uil-times');
        searchInput.focus();
      } else {
        searchIcon.classList.replace('uil-times', 'uil-search');
        searchSuggestions.classList.remove('active');
      }
    });

    // Mobile Menu
    navOpenBtn.addEventListener('click', () => {
      nav.classList.add('openNav');
      nav.classList.remove('openSearch');
      searchIcon.classList.replace('uil-times', 'uil-search');
    });

    navCloseBtn.addEventListener('click', () => {
      nav.classList.remove('openNav');
    });

    // Dropdown Toggle
    if (avatar && dropdown) {
      avatar.addEventListener('click', () => {
        dropdown.classList.toggle('active');
      });

      document.addEventListener('click', (e) => {
        if (!avatar.contains(e.target) && !dropdown.contains(e.target)) {
          dropdown.classList.remove('active');
        }
      });
    }

    // Search Suggestions (Mock)
    const mockSuggestions = ['Personal Blogs', 'Professional Tips', 'Creative Ideas', 'Hobbies', 'Social Topics'];
    searchInput.addEventListener('input', () => {
      const query = searchInput.value.trim().toLowerCase();
      searchSuggestions.innerHTML = '';
      if (query) {
        const filtered = mockSuggestions.filter(s => s.toLowerCase().includes(query));
        filtered.forEach(s => {
          const li = document.createElement('li');
          li.textContent = s;
          li.addEventListener('click', () => {
            searchInput.value = s;
            searchSuggestions.classList.remove('active');
          });
          searchSuggestions.appendChild(li);
        });
        searchSuggestions.classList.toggle('active', filtered.length > 0);
      } else {
        searchSuggestions.classList.remove('active');
      }
    });

    // Scroll Effect
    window.addEventListener('scroll', () => {
      nav.classList.toggle('scrolled', window.scrollY > 50);
    });

    // Theme Toggle (Placeholder)
    themeToggle.addEventListener('click', () => {
      document.body.classList.toggle('light-theme');
      themeToggle.classList.toggle('uil-moon');
      themeToggle.classList.toggle('uil-sun');
    });

    // Close Mobile Menu on Link Click
    document.querySelectorAll('.nav-links li a').forEach(link => {
      link.addEventListener('click', () => {
        nav.classList.remove('openNav');
      });
    });
  </script>
</body>
</html>