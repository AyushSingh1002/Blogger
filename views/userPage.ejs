<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Follow Page</title>
  <style>
    /* Global Styles */
    body {
      margin: 0;
      padding: 0;
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #f0f4ff, #e8ebf5);
      color: #333;
      display: grid;
      place-items: center;
      min-height: 100vh;
    }
    .container-2 {
      max-width: 450px;
      width: 90%;
      background: #ffffff;
      border-radius: 16px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      margin-top: 1px;
      padding: 20px 25px;
      text-align: center;
    }

    .container {
      max-width: 450px;
      width: 90%;
      background: #ffffff;
      border-radius: 16px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      padding: 20px 25px;
      text-align: center;
    }

    /* Profile Section */
    .profile-section {
      margin-bottom: 20px;
    }

    .profile-pic {
      position: relative;
      width: 120px;
      height: 120px;
      margin: 0 auto;
      border-radius: 50%;
      border: 4px solid #007bff;
      overflow: hidden;
      box-shadow: 0 4px 10px rgba(0, 123, 255, 0.3);
    }

    .profile-pic img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .user-info {
      margin-top: 15px;
    }

    .user-info h2 {
      font-size: 1.5em;
      color: #007bff;
      margin: 10px 0;
    }

    .user-info p {
      color: #666;
      font-size: 0.95em;
      margin: 5px 0;
      word-wrap: break-word;
    }

    /* Bio Section */
    .bio-section {
      background: #f8f9fc;
      border: 1px solid #e6e8f0;
      border-radius: 12px;
      padding: 15px;
      margin: 20px 0;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .bio-section h3 {
      margin-bottom: 10px;
      font-size: 1.2em;
      color: #444;
    }

    .bio-section p {
      font-size: 1em;
      color: #555;
      line-height: 1.6;
      word-wrap: break-word;
    }

    /* Follow Button */
    .btn-follow {
      display: inline-block;
      padding: 12px 20px;
      font-size: 1em;
      font-weight: 600;
      background: linear-gradient(135deg, #007bff, #0056b3);
      color: #fff;
      border: none;
      border-radius: 25px;
      cursor: pointer;
      box-shadow: 0 4px 10px rgba(0, 123, 255, 0.3);
      transition: background 0.3s, transform 0.2s, box-shadow 0.2s;
    }

    .btn-follow:hover {
      background: linear-gradient(135deg, #0056b3, #003e8a);
      transform: translateY(-2px);
      box-shadow: 0 6px 14px rgba(0, 56, 180, 0.4);
    }

    .btn-follow:active {
      transform: translateY(0);
      box-shadow: 0 4px 10px rgba(0, 123, 255, 0.3);
    }

    /* Footer Link */
    .footer {
      margin-top: 15px;
      font-size: 0.9em;
      color: #666;
    }

    .footer a {
      color: #007bff;
      text-decoration: none;
      font-weight: 600;
    }

    .footer a:hover {
      text-decoration: underline;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .container {
        padding: 15px 20px;
      }

      .profile-pic {
        width: 100px;
        height: 100px;
      }

      .user-info h2 {
        font-size: 1.2em;
      }

      .bio-section h3 {
        font-size: 1em;
      }

      .bio-section p {
        font-size: 0.9em;
      }
    }

    @media (max-width: 480px) {
      .profile-pic {
        width: 80px;
        height: 80px;
      }

      .user-info h2 {
        font-size: 1em;
      }

      .btn-follow {
        padding: 10px 15px;
        font-size: 0.9em;
      }

      .container {
        margin: 10px;
        width: calc(100% - 70px);
      }
    }
    body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f8f8f8;
}

.blog-list {
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
}

.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 3 columns on desktop */
  gap: 20px; /* Increased spacing between items */
}

.blog-item {
  background-color: #fff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  text-align: center; /* Center the title */
  padding: 10px; /* Add padding for spacing */
}

.blog-item:hover {
  transform: translateY(-5px);
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
}

.blog-image {
  width: 100%;
  height: 180px; /* Larger image size */
  object-fit: cover;
  border-radius: 10px;
}

.blog-title {
  font-size: 16px; /* Slightly smaller title */
  margin-top: 10px;
  color: #333;
  font-weight: bold;
}

.no-blogs {
  text-align: center;
  color: #999;
  font-size: 18px;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .grid {
    grid-template-columns: repeat(2, 1fr); /* 2 columns for tablets */
  }
}

@media (max-width: 480px) {
  .grid {
    grid-template-columns: repeat(2, 1fr); /* 1 column for mobile */
  }

  .blog-image {
    height: 150px; /* Slightly smaller images for mobile */
    object-fit: cover;
    
  }

  .blog-title {
    font-size: 14px; /* Smaller titles for mobile */
  }
}

  </style>
</head>
<body>
  <div class="container">
    <!-- Profile Section -->
    <div class="profile-section">
      <div class="profile-pic">
        <img src="<%= curUser.ProfilePic ? curUser.ProfilePic : '/path/to/default-pic.jpg' %>" alt="Profile Picture">
      </div>
      <div class="user-info">
        <h2><%= curUser.userName %></h2>
        <p>Email: <%= curUser.email.replace(/(.{2}).+@/, '$1***@') %></p>
      </div>
    </div>

    <!-- Bio Section -->
    <div class="bio-section">
      <h3>About Me</h3>
      <p id="bio-text">
        <%= curUser.Bio 
          ? (curUser.Bio.length > 100 
              ? curUser.Bio.substring(0, 100) + '... <a href="#" onclick="showFullBio(event)">Read more</a>' 
              : curUser.Bio)
          : "This user hasn't added a bio yet." %>
      </p>
    </div>

    <!-- Follow Button -->
    <% if (locals.user) { %>
    <% if (curUser._id.toString() !== user._id.toString()) { %>
      <form action="/follow/<%= curUser._id %>" method="POST">
        <button type="submit" class="btn-follow">
          <% if (curUser.followers.includes(user._id)) { %>
            Unfollow
          <% } else { %>
            Follow
          <% } %>
        </button>
      </form>
    <% } %>
    <% } %>


    <!-- Footer -->
    <div class="footer">
      <p>Want to see more? <a href="/">Explore other profiles</a></p>
    </div>
  </div>
  <div class="container-2">
    <h2 style="margin: 0%;">Blogs</h2>
    <div class="blog-list">
      <% if (userBlogs.length > 0) { %>
        <div class="grid">
          <% userBlogs.forEach(blog => { %>
            <div class="blog-item" onclick="location.href='/blog/<%= blog._id %>'">
              <img src="<%= blog.CoverImgURL %>" alt="Blog Cover" class="blog-image" />
              <h4 class="blog-title"><%= blog.title %></h4>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="no-blogs">No blogs available.</p>
      <% } %>
    </div>
    
  <script>
    function showFullBio(event) {
      event.preventDefault();
      document.getElementById('bio-text').innerHTML = `<%- curUser.Bio %>`;
    }
  </script>
</body>
</html>
