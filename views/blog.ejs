    <style>
        :root {
            --primary-color: #4CAF50;
            --secondary-color: #f9f9f9;
            --text-color: #333;
            --background-color: #fff;
            --shadow-color: rgba(0, 0, 0, 0.15);
        }

        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background-color: var(--secondary-color);
            color: var(--text-color);
        }

        .container {
            max-width: 900px;
            margin: 40px auto;
            padding: 20px;
            background-color: var(--background-color);
            border-radius: 12px;
            box-shadow: 0 4px 20px var(--shadow-color);
            overflow: hidden;
            
        }

        .blog-title {
            font-size: 2.5rem;
            font-weight: bold;
            color: var(--primary-color);
            margin-bottom: 20px;
            text-align: center;
            line-height: 1.4;
        }

        .blog-cover {
            align-content: center;
            width: 40%;
            height: auto;
            border-radius: 12px;
            margin-bottom: 25px;
            object-fit: cover;
            box-shadow: 0 4px 12px var(--shadow-color);
        }

        .blog-content {
            font-size: 1.1rem;
            line-height: 1.8;
            color: #555;
            text-align: justify;
